<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.doctor_appointment_online_booking"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main activity -->
        <activity
            android:name="com.android.daob.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.android.daob.activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>

        <!-- Doctor Home Activity -->
        <activity
            android:name="com.android.daob.activity.DoctorHomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>

        <!-- Patient Home Activity -->
        <activity
            android:name="com.android.daob.activity.PatientHomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>

        <!-- Search Doctor Activity -->
        <activity
            android:name="com.android.daob.activity.SearchDoctorActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/search_doctor"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>

        <!-- Doctor Detail Activity -->
        <activity
            android:name="com.android.daob.activity.DoctorDetailActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/doctor_detail"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>

        <!-- Calendar Activity -->
        <activity
            android:name="com.android.daob.activity.CalendarActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/view_calendar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
    </application>

</manifest>